<Page x:Class="ClassTimetableMaker.Views.FirstPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClassTimetableMaker.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="500"
      Title="FirstPage">

    <Grid>
        <Border Margin="10" Padding="10" BorderBrush="Black" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Welcome to the Class Timetable Maker!" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
                <TextBlock TextWrapping="Wrap">
                    This application allows you to create and manage your class timetable efficiently. 
                    You can add, edit, and delete classes as per your requirements.
                </TextBlock>
                <Button Content="Get Started" Width="100" Height="30" Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
