<Page x:Class="ClassTimetableMaker.Views.Page1"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     mc:Ignorable="d"
     d:DesignHeight="1000" d:DesignWidth="1400"
     Background="White"
     Title="TimetablePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header -->
            <RowDefinition Height="*" />
            <!-- Main Content -->
            <RowDefinition Height="Auto" />
            <!-- Footer/Status -->
        </Grid.RowDefinitions>

        <!-- 상단 제목 영역 -->
        <Border Grid.Row="0" Background="#2E3440" Padding="10">
            <TextBlock Text="학과 통합 시간표 제작"
                      FontSize="18" 
                      FontWeight="Bold" 
                      Foreground="White" 
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Main Layout -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <!-- 과목 생성 영역 (약간 넓게) -->
                <ColumnDefinition Width="*" />
                <!-- 시간표 -->
            </Grid.ColumnDefinitions>

            <!-- 좌측: 과목 생성 및 리스트 -->
            <Border Grid.Column="0" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="0,0,1,0">
                <StackPanel Margin="15">
                    <!-- 제목 -->
                    <TextBlock Text="📚 과목 목록" 
                              FontWeight="Bold" 
                              FontSize="16"
                              Margin="0,0,0,15" 
                              Foreground="#495057"/>

                    <!-- 과목 추가 버튼 -->
                    <Button Content="➕ 새 과목 추가" 
                           Margin="0,0,0,15" 
                           Padding="10,8"
                           Background="#007BFF"
                           Foreground="White"
                           BorderThickness="0"
                           FontWeight="SemiBold"
                           Cursor="Hand"
                           Click="AddLectureButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="5" 
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#0056B3"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- 도움말 텍스트 -->
                    <TextBlock Text="💡 과목을 시간표로 드래그하여 배치하세요" 
                              FontSize="11" 
                              Foreground="#6C757D" 
                              TextWrapping="Wrap"
                              Margin="0,0,0,10"/>

                    <!-- 드래그 가능한 과목 리스트 -->
                    <ScrollViewer Height="600" 
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="LectureListPanel">
                            <!-- 과목들이 동적으로 추가됩니다 -->
                        </StackPanel>
                    </ScrollViewer>

                    <!-- 범례 -->
                    <Border Background="White" 
                           BorderBrush="#DEE2E6" 
                           BorderThickness="1" 
                           CornerRadius="5" 
                           Padding="10" 
                           Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="🎨 학년별 색상" 
                                      FontWeight="SemiBold" 
                                      FontSize="12" 
                                      Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <Rectangle Width="15" Height="15" Fill="CornflowerBlue" Margin="0,0,5,0"/>
                                <TextBlock Text="1학년" FontSize="10"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <Rectangle Width="15" Height="15" Fill="ForestGreen" Margin="0,0,5,0"/>
                                <TextBlock Text="2학년" FontSize="10"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <Rectangle Width="15" Height="15" Fill="Orange" Margin="0,0,5,0"/>
                                <TextBlock Text="3학년" FontSize="10"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <Rectangle Width="15" Height="15" Fill="Crimson" Margin="0,0,5,0"/>
                                <TextBlock Text="4학년" FontSize="10"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <Rectangle Width="15" Height="15" Fill="Purple" Margin="0,0,5,0"/>
                                <TextBlock Text="대학원" FontSize="10"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- 우측: 동적 시간표 격자 -->
            <Border Grid.Column="1" Background="White" Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 안내 텍스트 -->
                        <RowDefinition Height="*"/>
                        <!-- 시간표 -->
                    </Grid.RowDefinitions>

                    <!-- 안내 텍스트 -->
                    <Border Grid.Row="0" Background="#E9ECEF" Padding="10" Margin="0,0,0,10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="🔄 통합 시간표" 
                                     FontWeight="Bold" 
                                     FontSize="14" 
                                     Foreground="#495057"
                                     HorizontalAlignment="Center"/>
                            <TextBlock Text="드래그앤드롭으로 시간표 블럭을 움직여 보세요. | 강의실·교수·과목 중복 자동 검사합니다."
                                     FontSize="11" 
                                     Foreground="#6C757D" 
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- 시간표 스크롤 영역 -->
                    <ScrollViewer Grid.Row="1" 
                                HorizontalScrollBarVisibility="Auto" 
                                VerticalScrollBarVisibility="Auto"
                                Background="#FAFAFA">

                        <!-- 동적 시간표 그리드 (코드에서 동적으로 생성) -->
                        <Grid x:Name="TimetableGrid" 
                            Background="White"
                            ShowGridLines="False">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <!-- 요일 헤더 -->
                                <!-- 1~9교시 (코드에서 동적으로 추가) -->
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="60" />
                            </Grid.RowDefinitions>
                            <!-- 열은 코드에서 동적으로 추가됩니다 -->
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- 하단 상태 영역 -->
        <Border Grid.Row="2" Background="#343A40" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                         x:Name="StatusText" 
                         Text="시간표 상태가 여기에 표시됩니다..." 
                         Foreground="White"
                         FontSize="12"
                         VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="📊 " FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="실시간 제약조건 현황" 
                             Foreground="#FFC107" 
                             FontSize="12" 
                             FontWeight="SemiBold"
                             VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>