<Page x:Class="ClassTimetableMaker.Views.Page1"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     mc:Ignorable="d"
     d:DesignHeight="1000" d:DesignWidth="1400"
     Background="White"
     Title="TimetablePage">

   <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header -->
            <RowDefinition Height="*" />
            <!-- Main Content -->
            <RowDefinition Height="Auto" />
            <!-- Footer/Status -->
        </Grid.RowDefinitions>
        <!-- Main Layout -->
       <Grid Grid.Row="1">
           <Grid.ColumnDefinitions>
               <ColumnDefinition Width="300" />
               <!-- 과목 생성 영역 -->
               <ColumnDefinition Width="*" />
               <!-- 시간표 -->
           </Grid.ColumnDefinitions>

            <!-- 좌측: 과목 생성 및 리스트 -->
            <StackPanel Grid.Column="0" Background="#f5f5f5" Margin="10">
                <TextBlock Text="과목 목록" FontWeight="Bold" Margin="0,0,0,10" />

                <!-- 과목 추가 버튼 -->
                <Button Content="과목 추가" Margin="0,0,0,10" Click="AddLectureButton_Click" />

                <!-- 드래그 가능한 과목 리스트 -->
                <ScrollViewer Height="500" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="LectureListPanel">
                        <!-- 과목들이 동적으로 추가됩니다 -->
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>

            <!-- 우측: 시간표 격자 -->
           <Grid Grid.Column="1" x:Name="TimetableGrid" Margin="10">
               <Grid.RowDefinitions>
                   <RowDefinition Height="30" />
                   <!-- 요일 헤더 -->
                   <!-- 1~9교시 -->
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
               </Grid.RowDefinitions>
               <Grid.ColumnDefinitions>
                   <ColumnDefinition Width="40" />
                   <!-- 교시 번호 -->
                   <ColumnDefinition Width="*" />
                   <!-- 월 -->
                   <ColumnDefinition Width="*" />
                   <!-- 화 -->
                   <ColumnDefinition Width="*" />
                   <!-- 수 -->
                   <ColumnDefinition Width="*" />
                   <!-- 목 -->
                   <ColumnDefinition Width="*" />
                   <!-- 금 -->
               </Grid.ColumnDefinitions>

               <!-- 요일 헤더 -->
                <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Padding="5">
                    <TextBlock Text="월" HorizontalAlignment="Center" />
                </Border>
                <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="1" Padding="5">
                    <TextBlock Text="화" HorizontalAlignment="Center" />
                </Border>
                <Border Grid.Row="0" Grid.Column="3" BorderBrush="Black" BorderThickness="1" Padding="5">
                    <TextBlock Text="수" HorizontalAlignment="Center" />
                </Border>
                <Border Grid.Row="0" Grid.Column="4" BorderBrush="Black" BorderThickness="1" Padding="5">
                    <TextBlock Text="목" HorizontalAlignment="Center" />
                </Border>
                <Border Grid.Row="0" Grid.Column="5" BorderBrush="Black" BorderThickness="1" Padding="5">
                    <TextBlock Text="금" HorizontalAlignment="Center" />
                </Border>
                <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Background="White"/> 


                <!-- 교시 번호와 드롭존 셀 -->
