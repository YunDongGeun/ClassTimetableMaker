<Page x:Class="ClassTimetableMaker.Views.Page1"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     mc:Ignorable="d"
     d:DesignHeight="800" d:DesignWidth="900"
     Background="White"
     Title="TimetablePage">

   <Grid>
       <Grid.RowDefinitions>
           <RowDefinition Height="Auto" />
           <!-- Header -->
           <RowDefinition Height="*" />
           <!-- Main Content -->
           <RowDefinition Height="Auto" />
           <!-- Footer/Status -->
       </Grid.RowDefinitions>

       <!-- Header -->
       <TextBlock Text="강의 시간표 작성 도우미" FontSize="24" FontWeight="Bold"
                  HorizontalAlignment="Center" Margin="10" />

       <!-- Main Layout -->
       <Grid Grid.Row="1">
           <Grid.ColumnDefinitions>
               <ColumnDefinition Width="300" />
               <!-- 과목 생성 영역 -->
               <ColumnDefinition Width="*" />
               <!-- 시간표 -->
           </Grid.ColumnDefinitions>

           <!-- 좌측: 과목 생성 및 리스트 -->
           <StackPanel Grid.Column="0" Background="#f5f5f5" Margin="10">
               <TextBlock Text="과목 목록" FontWeight="Bold" Margin="0,0,0,10" />
               <ListBox x:Name="LectureListBox" Height="500"
                        AllowDrop="True"
                        PreviewMouseLeftButtonDown="LectureListBox_PreviewMouseLeftButtonDown" />
               <Button Content="과목 추가" Margin="0,10,0,0" Click="AddLectureButton_Click" />
           </StackPanel>

           <!-- 우측: 시간표 격자 -->
           <Grid Grid.Column="1" x:Name="TimetableGrid" Margin="10">
               <Grid.RowDefinitions>
                   <RowDefinition Height="30" />
                   <!-- 요일 헤더 -->
                   <!-- 1~9교시 -->
                   <RowDefinition Height="60" />
                   <RowDefinition Height="60" />
                   <RowDefinition Height="60" />
                   <RowDefinition Height="60" />
                   <RowDefinition Height="60" />
                   <RowDefinition Height="60" />
                   <RowDefinition Height="60" />
                   <RowDefinition Height="60" />
                   <RowDefinition Height="60" />
               </Grid.RowDefinitions>
               <Grid.ColumnDefinitions>
                   <ColumnDefinition Width="50" />
                   <!-- 교시 번호 -->
                   <ColumnDefinition Width="*" />
                   <!-- 월 -->
                   <ColumnDefinition Width="*" />
                   <!-- 화 -->
                   <ColumnDefinition Width="*" />
                   <!-- 수 -->
                   <ColumnDefinition Width="*" />
                   <!-- 목 -->
                   <ColumnDefinition Width="*" />
                   <!-- 금 -->
               </Grid.ColumnDefinitions>

               <!-- 요일 헤더 -->
               <TextBlock Grid.Row="0" Grid.Column="1" Text="월" HorizontalAlignment="Center" />
               <TextBlock Grid.Row="0" Grid.Column="2" Text="화" HorizontalAlignment="Center" />
               <TextBlock Grid.Row="0" Grid.Column="3" Text="수" HorizontalAlignment="Center" />
               <TextBlock Grid.Row="0" Grid.Column="4" Text="목" HorizontalAlignment="Center" />
               <TextBlock Grid.Row="0" Grid.Column="5" Text="금" HorizontalAlignment="Center" />

               <!-- 교시 번호와 드롭존 셀 -->
               <ItemsControl Grid.Row="1" Grid.ColumnSpan="6">
                   <ItemsControl.ItemsSource>
                       <x:Array Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                           <sys:String>1</sys:String>
                           <sys:String>2</sys:String>
                           <sys:String>3</sys:String>
                           <sys:String>4</sys:String>
                           <sys:String>5</sys:String>
                           <sys:String>6</sys:String>
                           <sys:String>7</sys:String>
                           <sys:String>8</sys:String>
                           <sys:String>9</sys:String>
                       </x:Array>
                   </ItemsControl.ItemsSource>
                   <ItemsControl.ItemTemplate>
                       <DataTemplate>
                           <Grid>
                               <Grid.ColumnDefinitions>
                                   <ColumnDefinition Width="50" />
                                   <ColumnDefinition Width="*" />
                                   <ColumnDefinition Width="*" />
                                   <ColumnDefinition Width="*" />
                                   <ColumnDefinition Width="*" />
                                   <ColumnDefinition Width="*" />
                               </Grid.ColumnDefinitions>
                               <TextBlock Grid.Column="0" Text="{Binding}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                               <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="0.5" Background="White"
                                       AllowDrop="True" Drop="Cell_Drop" />
                               <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="0.5" Background="White"
                                       AllowDrop="True" Drop="Cell_Drop" />
                               <Border Grid.Column="3" BorderBrush="Gray" BorderThickness="0.5" Background="White"
                                       AllowDrop="True" Drop="Cell_Drop" />
                               <Border Grid.Column="4" BorderBrush="Gray" BorderThickness="0.5" Background="White"
                                       AllowDrop="True" Drop="Cell_Drop" />
                               <Border Grid.Column="5" BorderBrush="Gray" BorderThickness="0.5" Background="White"
                                       AllowDrop="True" Drop="Cell_Drop" />
                           </Grid>
                       </DataTemplate>
                   </ItemsControl.ItemTemplate>
               </ItemsControl>
           </Grid>
       </Grid>

       <!-- 하단 상태 영역 -->
       <TextBlock Grid.Row="2" x:Name="StatusText" Text="제약 조건 상태를 여기에 표시합니다." Margin="10" />
   </Grid>
</Page>
