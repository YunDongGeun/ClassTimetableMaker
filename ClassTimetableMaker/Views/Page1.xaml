                    <TextBlock  Text="1" HorizontalAlignment="Center" 
                                VerticalAlignment="Center" FontWeight="Bold" />
                </Border>
                <Border Grid.Row="1" Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Background="White" 
                        AllowDrop="True" Drop="Cell_Drop" DragEnter="Cell_DragEnter" DragLeave="Cell_DragLeave"
                        Tag="1,1" x:Name="Cell_1_1">
                    <Grid x:Name="CellContent_1_1" />
                </Border>
                <Border Grid.Row="1" Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Background="White" 
