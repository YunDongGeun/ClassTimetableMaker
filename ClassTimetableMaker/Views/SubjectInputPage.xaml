<Page x:Class="ClassTimetableMaker.Views.SubjectInputPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="950" d:DesignWidth="1300"
      Background="White"
      Title="교과목 정보 일괄 입력">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
            <TextBlock Text="📚" FontSize="32" Margin="0,0,10,0"/>
            <TextBlock Text="교과목 정보 입력" FontSize="28" FontWeight="Bold"
                       Foreground="#2C3E50" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- 메인 콘텐츠 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <!-- 입력 폼 -->
                <ColumnDefinition Width="*"/>
                <!-- 교과목 목록 -->
            </Grid.ColumnDefinitions>

            <!-- 좌측: 입력 폼 -->
            <Border Grid.Column="0" BorderBrush="#E67E22" BorderThickness="2" CornerRadius="10" 
                    Background="#FEFEFE" Margin="0,0,7,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="15">
                    <StackPanel>
                        <!-- 입력 폼 제목 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <TextBlock Text="✏️" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="교과목 정보 입력" FontWeight="Bold" FontSize="16" 
                                       Foreground="#E67E22" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- 1. 기본 정보 -->
                        <GroupBox Header="📋 기본 정보" Padding="15" BorderBrush="#E67E22" BorderThickness="1" Margin="0,0,0,15">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="12" Foreground="#E67E22"/>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                            <StackPanel>
                                <TextBlock Text="과목명 *" FontWeight="Bold" FontSize="11" Margin="0,0,0,5" Foreground="#2C3E50"/>
                                <TextBox x:Name="txtSubjectName" Height="30" FontSize="11"
                                         BorderBrush="#BDC3C7" BorderThickness="1" Padding="6"/>

                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="학년 *" FontWeight="Bold" FontSize="11" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="cbGrade" Height="30" FontSize="11">
                                            <ComboBoxItem Content="1학년"/>
                                            <ComboBoxItem Content="2학년"/>
                                            <ComboBoxItem Content="3학년"/>
                                            <ComboBoxItem Content="4학년"/>
                                            <ComboBoxItem Content="대학원"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="과목구분 *" FontWeight="Bold" FontSize="11" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="cbCourseType" Height="30" FontSize="11">
                                            <ComboBoxItem Content="전공필수"/>
                                            <ComboBoxItem Content="전공선택"/>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>

                                <TextBlock Text="* 필수 입력 항목" FontSize="9" Foreground="#E74C3C" Margin="0,8,0,0"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- 2. 강의 시간 설정 -->
                        <GroupBox Header="⏰ 강의 시간 설정" Padding="15" BorderBrush="#3498DB" BorderThickness="1" Margin="0,0,0,15">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="12" Foreground="#3498DB"/>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="1차시 시간 *" FontWeight="Bold" FontSize="11" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="cbLectureHours1" Height="30" FontSize="11"
                                                  SelectionChanged="cbLectureHours_SelectionChanged">
                                            <ComboBoxItem Content="1"/>
                                            <ComboBoxItem Content="2"/>
                                            <ComboBoxItem Content="3"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="2차시 시간" FontWeight="Bold" FontSize="11" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="cbLectureHours2" Height="30" FontSize="11"
                                                  SelectionChanged="cbLectureHours_SelectionChanged">
                                            <ComboBoxItem Content="0"/>
                                            <ComboBoxItem Content="1"/>
                                            <ComboBoxItem Content="2"/>
                                            <ComboBoxItem Content="3"/>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>

                                <!--<CheckBox x:Name="chkIsContinuous" Content="연강으로 진행" Margin="0,10,0,5"
                                          FontSize="11" Checked="chkIsContinuous_Checked" Unchecked="chkIsContinuous_Unchecked"/>-->

                                <StackPanel x:Name="spContinuousSettings" Visibility="Collapsed" Margin="20,5,0,0">
                                    <TextBlock Text="연강 시간 설정" FontWeight="Bold" FontSize="10" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="cbContinuousHours" Height="25" FontSize="10" Width="80" HorizontalAlignment="Left">
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2"/>
                                        <ComboBoxItem Content="3"/>
                                    </ComboBox>
                                    <TextBlock Text="💡 연강 시간은 1차시 시간과 동일하게 설정됩니다" 
                                               FontSize="9" Foreground="#7F8C8D" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- 3. 분반 설정 -->
                        <GroupBox Header="👥 분반 설정" Padding="15" BorderBrush="#9B59B6" BorderThickness="1" Margin="0,0,0,15">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="12" Foreground="#9B59B6"/>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                            <StackPanel>
                                <TextBlock Text="분반 개수" FontWeight="Bold" FontSize="11" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cbSectionCount" Height="30" FontSize="11" SelectionChanged="cbSectionCount_SelectionChanged">
                                    <ComboBoxItem Content="1"/>
                                    <ComboBoxItem Content="2"/>
                                    <ComboBoxItem Content="3"/>
                                    <ComboBoxItem Content="4"/>
                                    <ComboBoxItem Content="5"/>
                                </ComboBox>

                                <TextBlock x:Name="txtSectionPreview" Text="분반: A" FontSize="10" 
                                           Foreground="#9B59B6" Margin="0,5,0,0" FontWeight="Bold"/>

                                <TextBlock Text="💡 분반이 여러 개인 경우 A, B, C... 순서로 생성됩니다" 
                                           FontSize="9" Foreground="#7F8C8D" Margin="0,5,0,0" TextWrapping="Wrap"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- 4. 담당 교수 선택 -->
                        <GroupBox Header="👨‍🏫 담당 교수 선택" Padding="15" BorderBrush="#27AE60" BorderThickness="1" Margin="0,0,0,15">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="12" Foreground="#27AE60"/>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                            <StackPanel>
                                <TextBlock Text="담당 교수 (최소 1명) *" FontWeight="Bold" FontSize="11" Margin="0,0,0,8"/>

                                <!-- 교수 목록 로딩 상태 -->
                                <TextBlock x:Name="txtProfessorLoadingStatus" Text="교수 목록을 불러오는 중..." 
                                           FontSize="10" Foreground="#7F8C8D" Margin="0,0,0,5"/>

                                <!-- 교수 선택 리스트 -->
                                <ScrollViewer x:Name="svProfessorList" Height="120" VerticalScrollBarVisibility="Auto" 
                                              BorderBrush="#BDC3C7" BorderThickness="1" Margin="0,0,0,10">
                                    <StackPanel x:Name="spProfessorList" Margin="5"/>
                                </ScrollViewer>

                                <!-- 선택된 교수 미리보기 -->
                                <TextBlock Text="선택된 교수:" FontWeight="Bold" FontSize="10" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtSelectedProfessors" Text="선택된 교수가 없습니다" 
                                           FontSize="10" Foreground="#7F8C8D" TextWrapping="Wrap" Margin="0,0,0,5"/>

                                <Border CornerRadius="3"><Button x:Name="btnRefreshProfessors" Content="🔄 교수 목록 새로고침" 
                                        Width="120" Height="25" FontSize="10" Margin="0,5,0,0"
                                        Background="#95A5A6" Foreground="White" BorderThickness="0"
                                        Click="btnRefreshProfessors_Click"/></Border>
                                
                            </StackPanel>
                        </GroupBox>

                        <!-- 추가 버튼 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Border CornerRadius="5">
                                <Button x:Name="btnAddSubject" Content="➕ 추가" Width="90" Height="35" Margin="10,0"
                                    Background="#E67E22" Foreground="White" FontWeight="Bold" FontSize="12"
                                    Click="btnAddSubject_Click" BorderThickness="0"/>
                            </Border>
                            
                            <Border CornerRadius="5"><Button x:Name="btnClear" Content="🔄 초기화" Width="90" Height="35" Margin="10,0"
                                    Background="#95A5A6" Foreground="White" FontWeight="Bold" FontSize="12"
                                    Click="btnClear_Click" BorderThickness="0"/></Border>
                            
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- 우측: 입력된 교과목 목록 -->
            <Border Grid.Column="1" BorderBrush="#34495E" BorderThickness="2" CornerRadius="10" 
        Margin="7,0,0,0" Background="#FAFAFA">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 헤더 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <TextBlock Text="📚" FontSize="20" Margin="0,0,8,0"/>
                        <TextBlock Text="교과목 목록 관리" FontWeight="Bold" FontSize="16" 
                       Foreground="#34495E" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 데이터 소스 선택 -->
                    <Border Grid.Row="1" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" 
                CornerRadius="5" Padding="12" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="📊 데이터 소스" FontWeight="Bold" FontSize="12" Margin="0,0,0,8" Foreground="#E67E22"/>
                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="rbShowTempSubjects" Content="임시 입력 목록" IsChecked="True" 
                                Margin="0,0,15,0" FontSize="11" Checked="SubjectDataSource_Changed"/>
                                <RadioButton x:Name="rbShowDBSubjects" Content="데이터베이스" 
                                Margin="0,0,15,0" FontSize="11" Checked="SubjectDataSource_Changed"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- 필터 및 검색 -->
                    <Border Grid.Row="2" Background="#FFF3E0" BorderBrush="#E67E22" BorderThickness="1" 
                CornerRadius="5" Padding="10" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="🔍 검색 및 필터" FontWeight="Bold" FontSize="11" Margin="0,0,0,5" Foreground="#E67E22"/>
                                <TextBox x:Name="txtSearchSubject" Height="25" FontSize="10" 
                             BorderBrush="#E67E22" BorderThickness="1" Padding="5"
                             TextChanged="txtSearchSubject_TextChanged"
                             ToolTip="교과목명, 교수명으로 검색"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="학년" FontSize="10" Margin="0,0,0,2"/>
                                <ComboBox x:Name="cbFilterGrade" Height="25" FontSize="10"
                              SelectionChanged="cbFilterGrade_SelectionChanged">
                                    <ComboBoxItem Content="전체"/>
                                    <ComboBoxItem Content="1학년"/>
                                    <ComboBoxItem Content="2학년"/>
                                    <ComboBoxItem Content="3학년"/>
                                    <ComboBoxItem Content="4학년"/>
                                    <ComboBoxItem Content="대학원"/>
                                </ComboBox>
                            </StackPanel>

                            <Button Grid.Column="4" x:Name="btnClearFilter" Content="🔄" Height="25" 
                        Background="Transparent" BorderThickness="0" FontSize="12"
                        Click="btnClearFilter_Click" ToolTip="필터 초기화"/>
                        </Grid>
                    </Border>

                    <!-- 통계 정보 (개선된 버전) -->
                    <Border Grid.Row="3" BorderBrush="#E67E22" BorderThickness="1" 
                CornerRadius="5" Padding="12" Margin="0,0,0,10">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FFF3E0" Offset="0"/>
                                <GradientStop Color="#FDEDEA" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 첫 번째 줄: 기본 통계 -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="총 교과목: " FontSize="12" FontWeight="Bold"/>
                                    <TextBlock x:Name="txtSubjectCount" Text="0개" FontSize="12" FontWeight="Bold" Foreground="#E67E22"/>
                                    <TextBlock x:Name="txtSubjectDataSourceStatus" Text=" | 임시 목록" FontSize="11" Foreground="#E67E22" Margin="8,0,0,0"/>
                                </StackPanel>

                                <Button Grid.Column="1" x:Name="btnRefreshSubjectData" Content="🔄" Width="25" Height="20" 
                            Background="Transparent" BorderThickness="0" FontSize="12"
                            Click="btnRefreshSubjectData_Click" ToolTip="데이터 새로고침"/>
                            </Grid>

                            <!-- 두 번째 줄: 선택 및 학년별 통계 -->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" x:Name="txtSubjectSelectionStatus" Text="선택된 교과목이 없습니다" 
                              FontSize="10" Foreground="#7F8C8D"/>
                                <TextBlock Grid.Column="1" x:Name="txtGradeStatistics" Text="" 
                              FontSize="10" Foreground="#E67E22" HorizontalAlignment="Right"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- 교과목 리스트 (대폭 개선) -->
                    <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="listSubjects" SelectionChanged="listSubjects_SelectionChanged"
                     BorderThickness="0" Background="Transparent" SelectionMode="Extended">

                            <!-- 개선된 아이템 컨테이너 스타일 -->
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="BorderElement" 
                                            Background="White"
                                            BorderBrush="#BDC3C7"
                                            BorderThickness="1"
                                            CornerRadius="10"
                                            Margin="0,3"
                                            Padding="3">
                                                    <ContentPresenter Margin="12"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="BorderElement" Property="BorderBrush" Value="#E67E22"/>
                                                        <Setter TargetName="BorderElement" Property="BorderThickness" Value="2"/>
                                                        <Setter TargetName="BorderElement" Property="Background" Value="#FFF3E0"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="BorderElement" Property="Background" Value="#F8F9FA"/>
                                                        <Setter TargetName="BorderElement" Property="BorderBrush" Value="#E67E22"/>
                                                    </Trigger>
                                                    <MultiTrigger>
                                                        <MultiTrigger.Conditions>
                                                            <Condition Property="IsSelected" Value="True"/>
                                                            <Condition Property="IsMouseOver" Value="True"/>
                                                        </MultiTrigger.Conditions>
                                                        <Setter TargetName="BorderElement" Property="Background" Value="#FDEDEA"/>
                                                    </MultiTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <!-- 대폭 개선된 아이템 템플릿 -->
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="5"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="3"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- 교과목명 및 상태 -->
                                        <StackPanel Grid.Row="0" Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" 
                                           Foreground="#2C3E50" TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <!-- 상태 아이콘들 -->
                                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                                            <TextBlock Text="💾" FontSize="14" Margin="3,0" ToolTip="데이터베이스에 저장됨"
                                          Visibility="{Binding IsSaved, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            <TextBlock Text="⏳" FontSize="14" Margin="3,0" ToolTip="저장 대기 중"
                                          Visibility="{Binding IsTemp, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            <TextBlock Text="🔗" FontSize="14" Margin="3,0" ToolTip="연강 수업"
                                          Visibility="{Binding ContinuousVisibility}"/>
                                        </StackPanel>

                                        <!-- 기본 정보 라인 -->
                                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                                            <Border Background="#E67E22" CornerRadius="10" Padding="6,2" Margin="0,0,5,0">
                                                <TextBlock Text="{Binding Grade}" FontSize="9" 
                                               Foreground="White" FontWeight="Bold"/>
                                            </Border>
                                            <Border Background="#3498DB" CornerRadius="10" Padding="6,2" Margin="0,0,5,0">
                                                <TextBlock Text="{Binding CourseType}" FontSize="9" 
                                               Foreground="White" FontWeight="Bold"/>
                                            </Border>
                                            <Border Background="#27AE60" CornerRadius="10" Padding="6,2" Margin="0,0,5,0">
                                                <TextBlock FontSize="9" Foreground="White" FontWeight="Bold">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}1차시:{0}H, 2차시:{1}H">
                                                            <Binding Path="LectureHours1"/>
                                                            <Binding Path="LectureHours2"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </Border>
                                            <Border Background="#9B59B6" CornerRadius="10" Padding="6,2" Margin="0,0,5,0">
                                                <TextBlock FontSize="9" Foreground="White" FontWeight="Bold">
                                                    <TextBlock.Text>
                                                        <Binding Path="SectionCount" StringFormat="{}분반:{0}개"/>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>

                                        <!-- 담당 교수 정보 -->
                                        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                                <TextBlock Text="👨‍🏫 " FontSize="10" Foreground="#34495E"/>
                                                <TextBlock Text="담당 교수:" FontSize="10" FontWeight="Bold" Foreground="#34495E"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding ProfessorNames}" FontSize="10" 
                                           Foreground="#34495E" TextWrapping="Wrap" Margin="15,0,0,0"/>

                                            <!-- 연강 정보 (있는 경우만 표시) -->
                                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0" 
                                            Visibility="{Binding ContinuousVisibility}">
                                                <TextBlock Text="🔗 " FontSize="10" Foreground="#E74C3C"/>
                                                <TextBlock FontSize="10" Foreground="#E74C3C" FontWeight="Bold">
                                                    <TextBlock.Text>
                                                        <Binding Path="ContinuousHours" StringFormat="{}연강 {0}시간"/>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>

                    <!-- 편집 버튼들 (3단계로 구성) -->
                    <Grid Grid.Row="5" Margin="0,15,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 1단계: 개별 조작 버튼들 -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Border CornerRadius="8" Margin="2,0">
                                <Button x:Name="btnEditSubject" Content="✏️ 수정" Width="65" Height="30" 
                            Click="btnEditSubject_Click" IsEnabled="False"
                            Background="#3498DB" Foreground="White" FontSize="10" FontWeight="Bold"
                            BorderThickness="0" ToolTip="선택한 교과목 정보를 수정합니다">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="8" 
