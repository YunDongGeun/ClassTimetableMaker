<Page x:Class="ClassTimetableMaker.Views.SubjectInputPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClassTimetableMaker.Views"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="900"
      Background="White"
      Title="교과목 정보 입력">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 로딩 오버레이 -->
        <Grid x:Name="LoadingOverlay" Grid.RowSpan="3" Background="#80000000" 
              Visibility="Collapsed" Panel.ZIndex="1000">
            <Border Background="White" CornerRadius="15" Width="250" Height="120" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                    BorderBrush="#007ACC" BorderThickness="2">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- 스피너 애니메이션 -->
                    <Ellipse x:Name="LoadingSpinner" Width="40" Height="40" 
                             Stroke="#007ACC" StrokeThickness="4" Opacity="0.9">
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="SpinnerRotate" CenterX="20" CenterY="20"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.StrokeDashArray>
                            <DoubleCollection>15,5</DoubleCollection>
                        </Ellipse.StrokeDashArray>
                    </Ellipse>
                    <TextBlock Text="교과목 정보 저장 중..." FontSize="16" FontWeight="Bold" 
                               Margin="0,15,0,0" HorizontalAlignment="Center" Foreground="#007ACC"/>
                    <TextBlock Text="잠시만 기다려주세요..." FontSize="12" 
                               Margin="0,5,0,0" HorizontalAlignment="Center" Foreground="Gray"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 제목 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
            <TextBlock Text="📚" FontSize="32" Margin="0,0,10,0"/>
            <TextBlock Text="교과목 정보 입력" FontSize="28" FontWeight="Bold" 
                       Foreground="#2C3E50" VerticalAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- 입력 폼 -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,15,0">
                <StackPanel>
                    <!-- 교과목 기본 정보 -->
                    <GroupBox Header="📖 교과목 기본 정보" Margin="0,0,0,20" Padding="20" 
                              BorderBrush="#3498DB" BorderThickness="2">
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14" Foreground="#3498DB"/>
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>
                        <StackPanel>
                            <TextBlock Text="교과목명" FontWeight="Bold" Margin="0,0,0,8" FontSize="13"/>
                            <TextBox x:Name="txtSubjectName" Height="35" FontSize="13" Margin="0,0,0,20"
                                     BorderBrush="#BDC3C7" BorderThickness="2" Padding="8"/>

                            <TextBlock Text="학년" FontWeight="Bold" Margin="0,0,0,8" FontSize="13"/>
                            <WrapPanel Margin="0,0,0,20">
                                <RadioButton x:Name="rbGrade1" Content="1학년" Margin="0,0,20,8" FontSize="12"
                                           Background="#E8F5E8" Padding="8,4"/>
                                <RadioButton x:Name="rbGrade2" Content="2학년" Margin="0,0,20,8" FontSize="12"
                                           Background="#E8F0FF" Padding="8,4"/>
                                <RadioButton x:Name="rbGrade3" Content="3학년" Margin="0,0,20,8" FontSize="12"
                                           Background="#FFF8E8" Padding="8,4"/>
                                <RadioButton x:Name="rbGrade4" Content="4학년" Margin="0,0,20,8" FontSize="12"
                                           Background="#FFE8E8" Padding="8,4"/>
                                <RadioButton x:Name="rbGraduate" Content="대학원" Margin="0,0,20,8" FontSize="12"
                                           Background="#F0E8FF" Padding="8,4"/>
                            </WrapPanel>

                            <TextBlock Text="과목 구분" FontWeight="Bold" Margin="0,0,0,8" FontSize="13"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <RadioButton x:Name="rbMajorRequired" Content="전공 필수" Margin="0,0,25,0" FontSize="12"
                                           Background="#FFE8E8" Padding="10,5"/>
                                <RadioButton x:Name="rbMajorElective" Content="전공 선택" Margin="0,0,25,0" FontSize="12"
                                           Background="#E8F0FF" Padding="10,5"/>
                                <RadioButton x:Name="rbGeneralRequired" Content="필수 교과목" Margin="0,0,25,0" FontSize="12"
                                           Background="#E8F5E8" Padding="10,5"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- 담당 교수 선택 -->
                    <GroupBox Header="👨‍🏫 담당 교수 선택" Margin="0,0,0,20" Padding="20" 
                              BorderBrush="#9B59B6" BorderThickness="2">
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14" Foreground="#9B59B6"/>
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>
                        <StackPanel>
                            <TextBlock Text="주담당 교수" FontWeight="Bold" Margin="0,0,0,8" FontSize="13"/>
                            <ComboBox x:Name="cbPrimaryProfessor" Height="35" Margin="0,0,0,20" FontSize="13"
                                      DisplayMemberPath="Name" SelectedValuePath="Id" 
                                      BorderBrush="#BDC3C7" BorderThickness="2"/>

                            <CheckBox x:Name="chkMultipleProfessors" Content="여러 교수가 담당 (팀티칭)" 
                                      Margin="0,0,0,15" FontSize="12" FontWeight="Bold"
                                      Checked="chkMultipleProfessors_Checked" 
                                      Unchecked="chkMultipleProfessors_Unchecked"/>

                            <Border x:Name="spAdditionalProfessors" Visibility="Collapsed"
                                    BorderBrush="#E8E8E8" BorderThickness="1" CornerRadius="5" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="추가 담당 교수" FontWeight="Bold" Margin="0,0,0,8" FontSize="12"/>
                                    <ListBox x:Name="listAdditionalProfessors" Height="100" Margin="0,0,0,10" 
                                             SelectionMode="Multiple" BorderBrush="#BDC3C7">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Content="{Binding Name}" Tag="{Binding Id}" 
                                                          Margin="8,4" FontSize="11"/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </GroupBox>

                    <!-- 강의실 지정 -->
                    <GroupBox Header="🏢 강의실 지정" Margin="0,0,0,20" Padding="20" 
                              BorderBrush="#E67E22" BorderThickness="2">
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14" Foreground="#E67E22"/>
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>
                        <StackPanel>
                            <RadioButton x:Name="rbFixedClassroom" Content="고정 강의실 사용" 
                                         Margin="0,0,0,12" FontSize="12" FontWeight="Bold"
                                         Checked="rbFixedClassroom_Checked"/>
                            <ComboBox x:Name="cbClassroom" Height="35" Margin="25,0,0,20" FontSize="13"
                                      DisplayMemberPath="Name" SelectedValuePath="Id" IsEnabled="False"
                                      BorderBrush="#BDC3C7" BorderThickness="2"/>

                            <RadioButton x:Name="rbFlexibleClassroom" Content="유동적 강의실 배정 (자동 할당)" 
                                         Margin="0,0,0,15" FontSize="12" FontWeight="Bold" IsChecked="True"
                                         Checked="rbFlexibleClassroom_Checked"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- 수업 시간 설정 -->
                    <GroupBox Header="⏰ 수업 시간 설정" Margin="0,0,0,20" Padding="20" 
                              BorderBrush="#27AE60" BorderThickness="2">
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14" Foreground="#27AE60"/>
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>
                        <StackPanel>
                            <CheckBox x:Name="chkTwoSessions" Content="2차시 분할 수업" 
                                      Margin="0,0,0,15" FontSize="12" FontWeight="Bold"
                                      Checked="chkTwoSessions_Checked" 
                                      Unchecked="chkTwoSessions_Unchecked"/>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" BorderBrush="#E8E8E8" BorderThickness="1" 
                                        CornerRadius="5" Padding="12">
                                    <StackPanel>
                                        <TextBlock Text="1차시 시간" FontWeight="Bold" Margin="0,0,0,8" FontSize="12"/>
                                        <ComboBox x:Name="cbLectureHour1" Height="32" SelectedIndex="0" FontSize="12">
                                            <ComboBoxItem Content="1시간"/>
                                            <ComboBoxItem Content="2시간"/>
                                            <ComboBoxItem Content="3시간"/>
                                        </ComboBox>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" x:Name="spSecondSession" BorderBrush="#E8E8E8" 
                                        BorderThickness="1" CornerRadius="5" Padding="12" IsEnabled="False">
                                    <StackPanel>
                                        <TextBlock Text="2차시 시간" FontWeight="Bold" Margin="0,0,0,8" FontSize="12"/>
                                        <ComboBox x:Name="cbLectureHour2" Height="32" SelectedIndex="0" FontSize="12">
                                            <ComboBoxItem Content="0시간"/>
                                            <ComboBoxItem Content="1시간"/>
                                            <ComboBoxItem Content="2시간"/>
                                            <ComboBoxItem Content="3시간"/>
                                        </ComboBox>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <CheckBox x:Name="chkContinuous" Content="연강으로 진행" 
                                      Margin="0,0,0,15" FontSize="12" FontWeight="Bold"
                                      Checked="chkContinuous_Checked"/>

                            <Border x:Name="spContinuousDetails" Visibility="Collapsed" 
                                    BorderBrush="#E8E8E8" BorderThickness="1" CornerRadius="5" 
                                    Padding="15" Margin="25,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="연강 시간 수" FontWeight="Bold" Margin="0,0,0,8" FontSize="12"/>
                                    <ComboBox x:Name="cbContinuousHours" Height="32" SelectedIndex="0" FontSize="12">
                                        <ComboBoxItem Content="2시간 연강"/>
                                        <ComboBoxItem Content="3시간 연강"/>
                                    </ComboBox>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </GroupBox>

                    <!-- 분반 설정 -->
                    <GroupBox Header="👥 분반 설정" Margin="0,0,0,20" Padding="20" 
                              BorderBrush="#E74C3C" BorderThickness="2">
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14" Foreground="#E74C3C"/>
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>
                        <StackPanel>
                            <TextBlock Text="분반 개수" FontWeight="Bold" Margin="0,0,0,8" FontSize="13"/>
                            <ComboBox x:Name="cbSectionCount" Height="35" SelectedIndex="0" Margin="0,0,0,15" FontSize="13">
                                <ComboBoxItem Content="1개 (분반 없음)"/>
                                <ComboBoxItem Content="2개 (A, B분반)"/>
                                <ComboBoxItem Content="3개 (A, B, C분반)"/>
                                <ComboBoxItem Content="4개 (A, B, C, D분반)"/>
                                <ComboBoxItem Content="5개 (A, B, C, D, E분반)"/>
                            </ComboBox>

                            <Border Background="#FFF8DC" BorderBrush="#F39C12" BorderThickness="1" 
                                    CornerRadius="5" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="💡 분반 정보" FontWeight="Bold" FontSize="11" Foreground="#D68910"/>
                                    <TextBlock Text="• 분반이 있는 경우 각 분반별로 별도 시간에 배치됩니다" 
                                               FontSize="10" Foreground="#B7950B" TextWrapping="Wrap"/>
                                    <TextBlock Text="• 같은 교과목의 분반들은 동일한 시간에 배치되지 않습니다" 
                                               FontSize="10" Foreground="#B7950B" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- 교과목 목록 -->
            <Border Grid.Column="1" BorderBrush="#34495E" BorderThickness="2" CornerRadius="10" 
                    Margin="15,0,0,0" Background="#FAFAFA">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 헤더 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <TextBlock Text="📋" FontSize="20" Margin="0,0,8,0"/>
                        <TextBlock Text="등록된 교과목 목록" FontWeight="Bold" FontSize="16" 
                                   Foreground="#34495E" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 통계 정보 -->
                    <Border Grid.Row="1" Background="#E8F6F3" BorderBrush="#1ABC9C" BorderThickness="1" 
                            CornerRadius="5" Padding="10" Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="총 교과목 수: " FontSize="12" FontWeight="Bold"/>
                            <TextBlock x:Name="txtSubjectCount" Text="0개" FontSize="12" FontWeight="Bold" Foreground="#1ABC9C"/>
                        </StackPanel>
                    </Border>

                    <!-- 필터 및 검색 -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                        <TextBlock Text="학년별 필터" FontWeight="Bold" Margin="0,0,0,5" FontSize="11"/>
                        <ComboBox x:Name="cbFilterGrade" Height="30" FontSize="11" Margin="0,0,0,10"
                                  SelectionChanged="cbFilterGrade_SelectionChanged">
                            <ComboBoxItem Content="전체 학년" IsSelected="True"/>
                            <ComboBoxItem Content="1학년"/>
                            <ComboBoxItem Content="2학년"/>
                            <ComboBoxItem Content="3학년"/>
                            <ComboBoxItem Content="4학년"/>
                            <ComboBoxItem Content="대학원"/>
                        </ComboBox>

                        <TextBlock Text="교과목명 검색" FontWeight="Bold" Margin="0,0,0,5" FontSize="11"/>
                        <TextBox x:Name="txtSearchSubject" Height="30" FontSize="11"
                                 Foreground="Gray" Text="검색어를 입력하세요..." 
                                 GotFocus="txtSearchSubject_GotFocus" 
                                 LostFocus="txtSearchSubject_LostFocus" 
                                 TextChanged="txtSearchSubject_TextChanged"/>
                    </StackPanel>

                    <!-- 교과목 리스트 -->
                    <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="listSubjects" SelectionChanged="listSubjects_SelectionChanged"
                                 BorderThickness="0" Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,8" Padding="12" CornerRadius="8" 
                                            BorderThickness="1" BorderBrush="#BDC3C7">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#FF6B73" Offset="0"/>
                                                <GradientStop Color="#FFE5E7" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="13" 
                                                       Foreground="White" TextWrapping="Wrap"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <Border Background="White" CornerRadius="10" Padding="6,2">
                                                    <TextBlock Text="{Binding Grade}" FontSize="9" 
                                                               Foreground="#C0392B" FontWeight="Bold"/>
                                                </Border>
                                                <Border Background="#F8F9FA" CornerRadius="10" Padding="6,2" Margin="4,0,0,0">
                                                    <TextBlock Text="{Binding CourseType}" FontSize="9" 
                                                               Foreground="#6C757D"/>
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="시간: " FontSize="9" Foreground="White"/>
                                                <TextBlock Text="{Binding LectureHours1}" FontSize="9" Foreground="White"/>
                                                <TextBlock Text="+" FontSize="9" Foreground="White"/>
                                                <TextBlock Text="{Binding LectureHours2}" FontSize="9" Foreground="White"/>
                                                <TextBlock Text="시간" FontSize="9" Foreground="White"/>
                                                <TextBlock Text=" | 분반: " FontSize="9" Foreground="White" Margin="8,0,0,0"/>
                                                <TextBlock Text="{Binding SectionCount}" FontSize="9" Foreground="White"/>
                                                <TextBlock Text="개" FontSize="9" Foreground="White"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>

                    <!-- 편집 버튼들 -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                        <Border CornerRadius="10">
                            <Button x:Name="btnEditSubject" Content="✏️ 수정" Width="70" Height="32" 
                                Margin="0,0,8,0" Click="btnEditSubject_Click" IsEnabled="False"
                                Background="#3498DB" Foreground="White" FontSize="11" FontWeight="Bold"
                                BorderThickness="0" />
                        </Border>

                        <Border CornerRadius="10">
                            <Button x:Name="btnDeleteSubject" Content="🗑️ 삭제" Width="70" Height="32" 
                                Click="btnDeleteSubject_Click" IsEnabled="False"
                                Background="#E74C3C" Foreground="White" FontSize="11" FontWeight="Bold"
                                BorderThickness="0"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- 하단 버튼들 -->
        <Border Grid.Row="2" Background="#ECF0F1" CornerRadius="10" Padding="20" Margin="0,25,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- 네비게이션 버튼들 -->
                <Border CornerRadius="8">
                    <Button x:Name="btnProfessorInput" Content="👨‍🏫 교수 입력" Width="120" Height="40" 
                        Margin="0,0,12,0" Click="btnProfessorInput_Click"
                        Background="#9B59B6" Foreground="White" FontSize="12" FontWeight="Bold"
                        BorderThickness="0">
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
                        </Button.Effect>
                    </Button>
                </Border>

                <Border CornerRadius="8">
                    <Button x:Name="btnClassroomInput" Content="🏢 강의실 입력" Width="120" Height="40" 
                        Margin="0,0,12,0" Click="btnClassroomInput_Click"
                        Background="#E67E22" Foreground="White" FontSize="12" FontWeight="Bold"
                        BorderThickness="0">
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
                        </Button.Effect>
                    </Button>
                </Border>

                <Border CornerRadius="8">
                    <Button x:Name="btnTimetable" Content="📅 시간표 작성" Width="120" Height="40" 
                        Margin="0,0,20,0" Click="btnTimetable_Click"
                        Background="#27AE60" Foreground="White" FontSize="12" FontWeight="Bold"
                        BorderThickness="0">
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
                        </Button.Effect>
                    </Button>
                </Border>


                <!-- 구분선 -->
                <Rectangle Width="2" Height="30" Fill="#BDC3C7" Margin="0,0,20,0"/>

                <!-- 액션 버튼들 -->
                <Border CornerRadius="8">
                    <Button x:Name="btnClear" Content="🔄 초기화" Width="90" Height="40" 
                        Margin="0,0,12,0" Click="btnClear_Click"
                        Background="#95A5A6" Foreground="White" FontSize="12" FontWeight="Bold"
                        BorderThickness="0">
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
                        </Button.Effect>
                    </Button>
                </Border>

                <Border CornerRadius="8">
                    <Button x:Name="btnSave" Content="💾 저장" Width="90" Height="40" 
                        Click="btnSave_Click"
                        Background="#2980B9" Foreground="White" FontSize="12" FontWeight="Bold"
                        BorderThickness="0">
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
                        </Button.Effect>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8" 
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                BorderBrush="{TemplateBinding BorderBrush}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#3498DB"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#1F5F99"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>

            </StackPanel>
        </Border>
    </Grid>
</Page>