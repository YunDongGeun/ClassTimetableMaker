<Page x:Class="ClassTimetableMaker.Views.ProfessorInputPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="900" d:DesignWidth="1200"
      Background="White"
      Title="교수 정보 일괄 입력">

    <Grid Margin="40,20,40,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
            <TextBlock Text="👨‍🏫" FontSize="32" Margin="0,0,10,0"/>
            <TextBlock Text="교수 정보 일괄 입력" FontSize="28" FontWeight="Bold"
                       Foreground="#2C3E50" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- 메인 콘텐츠 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <!-- 입력 폼 -->
                <ColumnDefinition Width="*"/>
                <!-- 교수 목록 -->
            </Grid.ColumnDefinitions>

            <!-- 좌측: 입력 폼 -->
            <Border Grid.Column="0" BorderBrush="#9B59B6" BorderThickness="2" CornerRadius="10" 
                    Background="#FEFEFE" Margin="0,0,7,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20">
                    <StackPanel>
                        <!-- 입력 폼 제목 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <TextBlock Text="✏️" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="교수 정보 입력" FontWeight="Bold" FontSize="16" 
                                       Foreground="#9B59B6" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- 1. 교수 기본 정보 -->
                        <GroupBox Header="📋 교수 기본 정보" Padding="15" BorderBrush="#9B59B6" BorderThickness="1" Margin="0,0,0,15">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="12" Foreground="#9B59B6"/>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                            <StackPanel>
                                <TextBlock Text="교수명 *" FontWeight="Bold" FontSize="11" Margin="0,0,0,5" Foreground="#2C3E50"/>
                                <TextBox x:Name="txtProfessorName" Height="30" FontSize="11"
                                         BorderBrush="#BDC3C7" BorderThickness="1" Padding="6"/>
                                <TextBlock Text="* 필수 입력 항목" FontSize="9" Foreground="#E74C3C" Margin="0,3,0,0"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- 2. 선호 강의 시간 -->
                        <GroupBox Header="✅ 선호 강의 시간" Padding="15" BorderBrush="#27AE60" BorderThickness="1" Margin="0,0,0,15">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="12" Foreground="#27AE60"/>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                            <StackPanel>
                                <TextBlock Text="강의를 선호하는 요일 선택" FontSize="10" Margin="0,0,0,10" Foreground="#34495E"/>

                                <WrapPanel Orientation="Horizontal">
                                    <CheckBox x:Name="chkPreferMon" Content="월" Margin="0,0,10,8" FontSize="10"/>
                                    <CheckBox x:Name="chkPreferTue" Content="화" Margin="0,0,10,8" FontSize="10"/>
                                    <CheckBox x:Name="chkPreferWed" Content="수" Margin="0,0,10,8" FontSize="10"/>
                                    <CheckBox x:Name="chkPreferThu" Content="목" Margin="0,0,10,8" FontSize="10"/>
                                    <CheckBox x:Name="chkPreferFri" Content="금" Margin="0,0,10,8" FontSize="10"/>
                                </WrapPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- 3. 불가능한 시간 -->
                        <GroupBox Header="⛔ 불가능한 시간" Padding="15" BorderBrush="#E74C3C" BorderThickness="1" Margin="0,0,0,15">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="12" Foreground="#E74C3C"/>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                            <StackPanel>
                                <!-- 불가능한 시간 타입 선택 -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <RadioButton x:Name="rbUnavailableByTime" Content="시간대별" 
                                                 IsChecked="True" Margin="0,0,15,0" FontSize="10"
                                                 Checked="rbUnavailableByTime_Checked"/>
                                    <RadioButton x:Name="rbUnavailableByPeriod" Content="교시별" 
                                                 Margin="0,0,15,0" FontSize="10"
                                                 Checked="rbUnavailableByPeriod_Checked"/>
                                </StackPanel>

                                <!-- 시간대별 불가능 시간 -->
                                <StackPanel x:Name="spTimeBasedUnavailable">
                                    <!-- 불가능 시간 1 -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <ComboBox x:Name="cbSlot1Day" Width="60" Height="25" FontSize="10" Margin="0,0,5,0">
                                            <ComboBoxItem Content="월요일"/>
                                            <ComboBoxItem Content="화요일"/>
                                            <ComboBoxItem Content="수요일"/>
                                            <ComboBoxItem Content="목요일"/>
                                            <ComboBoxItem Content="금요일"/>
                                        </ComboBox>
                                        <ComboBox x:Name="cbSlot1Time" Width="70" Height="25" FontSize="10">
                                            <ComboBoxItem Content="오전"/>
                                            <ComboBoxItem Content="오후"/>
                                            <ComboBoxItem Content="전체"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <!-- 불가능 시간 2 -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <ComboBox x:Name="cbSlot2Day" Width="60" Height="25" FontSize="10" Margin="0,0,5,0">
                                            <ComboBoxItem Content="월요일"/>
                                            <ComboBoxItem Content="화요일"/>
                                            <ComboBoxItem Content="수요일"/>
                                            <ComboBoxItem Content="목요일"/>
                                            <ComboBoxItem Content="금요일"/>
                                        </ComboBox>
                                        <ComboBox x:Name="cbSlot2Time" Width="70" Height="25" FontSize="10">
                                            <ComboBoxItem Content="오전"/>
                                            <ComboBoxItem Content="오후"/>
                                            <ComboBoxItem Content="전체"/>
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>

                                <!-- 교시별 불가능 시간 -->
                                <StackPanel x:Name="spPeriodBasedUnavailable" Visibility="Collapsed">
                                    <!-- 교시별 불가능 시간 1 -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <ComboBox x:Name="cbPeriodSlot1Day" Width="60" Height="25" FontSize="10" Margin="0,0,3,0">
                                            <ComboBoxItem Content="모든요일"/>
                                            <ComboBoxItem Content="월요일"/>
                                            <ComboBoxItem Content="화요일"/>
                                            <ComboBoxItem Content="수요일"/>
                                            <ComboBoxItem Content="목요일"/>
                                            <ComboBoxItem Content="금요일"/>
                                        </ComboBox>
                                        <ComboBox x:Name="cbPeriodSlot1Start" Width="35" Height="25" FontSize="10" Margin="0,0,3,0">
                                            <ComboBoxItem Content="1"/>
                                            <ComboBoxItem Content="2"/>
                                            <ComboBoxItem Content="3"/>
                                            <ComboBoxItem Content="4"/>
                                            <ComboBoxItem Content="5"/>
                                            <ComboBoxItem Content="6"/>
                                            <ComboBoxItem Content="7"/>
                                            <ComboBoxItem Content="8"/>
                                            <ComboBoxItem Content="9"/>
                                        </ComboBox>
                                        <TextBlock Text="~" VerticalAlignment="Center" FontSize="10" Margin="0,0,3,0"/>
                                        <ComboBox x:Name="cbPeriodSlot1End" Width="35" Height="25" FontSize="10">
                                            <ComboBoxItem Content="1"/>
                                            <ComboBoxItem Content="2"/>
                                            <ComboBoxItem Content="3"/>
                                            <ComboBoxItem Content="4"/>
                                            <ComboBoxItem Content="5"/>
                                            <ComboBoxItem Content="6"/>
                                            <ComboBoxItem Content="7"/>
                                            <ComboBoxItem Content="8"/>
                                            <ComboBoxItem Content="9"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <!-- 교시별 불가능 시간 2 -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <ComboBox x:Name="cbPeriodSlot2Day" Width="60" Height="25" FontSize="10" Margin="0,0,3,0">
                                            <ComboBoxItem Content="모든요일"/>
                                            <ComboBoxItem Content="월요일"/>
                                            <ComboBoxItem Content="화요일"/>
                                            <ComboBoxItem Content="수요일"/>
                                            <ComboBoxItem Content="목요일"/>
                                            <ComboBoxItem Content="금요일"/>
                                        </ComboBox>
                                        <ComboBox x:Name="cbPeriodSlot2Start" Width="35" Height="25" FontSize="10" Margin="0,0,3,0">
                                            <ComboBoxItem Content="1"/>
                                            <ComboBoxItem Content="2"/>
                                            <ComboBoxItem Content="3"/>
                                            <ComboBoxItem Content="4"/>
                                            <ComboBoxItem Content="5"/>
                                            <ComboBoxItem Content="6"/>
                                            <ComboBoxItem Content="7"/>
                                            <ComboBoxItem Content="8"/>
                                            <ComboBoxItem Content="9"/>
                                        </ComboBox>
                                        <TextBlock Text="~" VerticalAlignment="Center" FontSize="10" Margin="0,0,3,0"/>
                                        <ComboBox x:Name="cbPeriodSlot2End" Width="35" Height="25" FontSize="10">
                                            <ComboBoxItem Content="1"/>
                                            <ComboBoxItem Content="2"/>
                                            <ComboBoxItem Content="3"/>
                                            <ComboBoxItem Content="4"/>
                                            <ComboBoxItem Content="5"/>
                                            <ComboBoxItem Content="6"/>
                                            <ComboBoxItem Content="7"/>
                                            <ComboBoxItem Content="8"/>
                                            <ComboBoxItem Content="9"/>
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>


                                <StackPanel x:Name="spAdditionalSlots" Visibility="Collapsed">
                                    <!-- 추가 업무 시간 1 -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <ComboBox x:Name="cbAdditionalSlot1Day" Width="60" Height="25" FontSize="10" Margin="0,0,5,0">
                                            <ComboBoxItem Content="월요일"/>
                                            <ComboBoxItem Content="화요일"/>
                                            <ComboBoxItem Content="수요일"/>
                                            <ComboBoxItem Content="목요일"/>
                                            <ComboBoxItem Content="금요일"/>
                                        </ComboBox>
                                        <ComboBox x:Name="cbAdditionalSlot1Time" Width="70" Height="25" FontSize="10">
                                            <ComboBoxItem Content="오전"/>
                                            <ComboBoxItem Content="오후"/>
                                            <ComboBoxItem Content="전체"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <!-- 추가 업무 시간 2 -->
                                    <StackPanel Orientation="Horizontal">
                                        <ComboBox x:Name="cbAdditionalSlot2Day" Width="60" Height="25" FontSize="10" Margin="0,0,5,0">
                                            <ComboBoxItem Content="월요일"/>
                                            <ComboBoxItem Content="화요일"/>
                                            <ComboBoxItem Content="수요일"/>
                                            <ComboBoxItem Content="목요일"/>
                                            <ComboBoxItem Content="금요일"/>
                                        </ComboBox>
                                        <ComboBox x:Name="cbAdditionalSlot2Time" Width="70" Height="25" FontSize="10">
                                            <ComboBoxItem Content="오전"/>
                                            <ComboBoxItem Content="오후"/>
                                            <ComboBoxItem Content="전체"/>
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- 추가 버튼 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Border CornerRadius="8">
                                <Button x:Name="btnAddProfessor" Content="➕ 추가" Width="80" Height="35" Margin="5,0"
                                        Background="#27AE60" Foreground="White" FontWeight="Bold" FontSize="12"
                                        Click="btnAddProfessor_Click" BorderThickness="0"/>
                            </Border>
                            <Border CornerRadius="8">
                                <Button x:Name="btnClear" Content="🔄 초기화" Width="80" Height="35" Margin="5,0"
                                        Background="#95A5A6" Foreground="White" FontWeight="Bold" FontSize="12"
                                        Click="btnClear_Click" BorderThickness="0"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- 우측: 입력된 교수 목록 -->
            <Border Grid.Column="1" BorderBrush="#34495E" BorderThickness="2" CornerRadius="10" 
                    Margin="7,0,0,0" Background="#FAFAFA">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 헤더 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <TextBlock Text="👥" FontSize="20" Margin="0,0,8,0"/>
                        <TextBlock Text="입력된 교수 목록" FontWeight="Bold" FontSize="16" 
                                   Foreground="#34495E" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 통계 정보 -->
                    <Border Grid.Row="1" Background="#F4E8FF" BorderBrush="#9B59B6" BorderThickness="1" 
                            CornerRadius="5" Padding="10" Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="총 교수 수: " FontSize="12" FontWeight="Bold"/>
                            <TextBlock x:Name="txtProfessorCount" Text="0명" FontSize="12" FontWeight="Bold" Foreground="#9B59B6"/>
                            <TextBlock Text=" | 저장 대기 중" FontSize="11" Foreground="#E67E22" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- 교수 리스트 -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="listProfessors" SelectionChanged="listProfessors_SelectionChanged"
                                 BorderThickness="0" Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,8" Padding="12" CornerRadius="8" 
                                            BorderThickness="1" BorderBrush="#BDC3C7">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#9B59B6" Offset="0"/>
                                                <GradientStop Color="#E8D5FF" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="13" 
                                                       Foreground="White" TextWrapping="Wrap"/>

                                            <!-- 선호 시간 표시 -->
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="✅ " FontSize="10" Foreground="White"/>
                                                <TextBlock Text="{Binding PreferredTimeSlots}" FontSize="10" 
                                                           Foreground="White" TextWrapping="Wrap"/>
                                            </StackPanel>

                                            <!-- 불가능한 시간 표시 -->
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <TextBlock Text="⛔ " FontSize="10" Foreground="White"/>
                                                <TextBlock Text="{Binding UnavailableTimeSlots}" FontSize="10" 
                                                           Foreground="White" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>

                    <!-- 편집 버튼들 -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                        <Border CornerRadius="8">
                            <Button x:Name="btnEditProfessor" Content="✏️ 수정" Width="70" Height="32" 
        Margin="0,0,8,0" Click="btnEditProfessor_Click" IsEnabled="False"
        Background="#3498DB" Foreground="White" FontSize="11" FontWeight="Bold"
        BorderThickness="0"/>
                        </Border>

                        <Border CornerRadius="8">
                            <Button x:Name="btnDeleteProfessor" Content="🗑️ 삭제" Width="70" Height="32" 
        Click="btnDeleteProfessor_Click" IsEnabled="False"
        Background="#E74C3C" Foreground="White" FontSize="11" FontWeight="Bold"
        BorderThickness="0"/>
                        </Border>
                        
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- 하단: 일괄 저장 버튼 -->
        <Border Grid.Row="2" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" 
                CornerRadius="8" Padding="15" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnSaveAll" Content="💾 전체 저장" Width="140" Height="45" Margin="10,0"
                        Background="#2ECC71" Foreground="White" FontWeight="Bold" FontSize="14"
                        Click="btnSaveAll_Click" BorderThickness="0"  IsEnabled="False">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#27AE60"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#BDC3C7"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                
                <Button x:Name="btnCancel" Content="❌ 취소" Width="140" Height="45" Margin="10,0"
                        Background="#E74C3C" Foreground="White" FontWeight="Bold" FontSize="14"
                        Click="btnCancel_Click" BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#C0392B"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>