<Page x:Class="ClassTimetableMaker.Views.ProfessorInputPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="900" d:DesignWidth="1200"
      Background="White"
      Title="교수 정보 일괄 입력">

    <Grid Margin="40,20,40,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
            <TextBlock Text="👨‍🏫" FontSize="32" Margin="0,0,10,0"/>
            <TextBlock Text="교수 정보 일괄 입력" FontSize="28" FontWeight="Bold"
                       Foreground="#2C3E50" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- 메인 콘텐츠 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <!-- 입력 폼 -->
                <ColumnDefinition Width="*"/>
                <!-- 교수 목록 -->
            </Grid.ColumnDefinitions>

            <!-- 좌측: 입력 폼 -->
            <Border Grid.Column="0" BorderBrush="#9B59B6" BorderThickness="2" CornerRadius="10" 
                    Background="#FEFEFE" Margin="0,0,7,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20">
                    <StackPanel>
                        <!-- 입력 폼 제목 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <TextBlock Text="✏️" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="교수 정보 입력" FontWeight="Bold" FontSize="16" 
                                       Foreground="#9B59B6" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- 1. 교수 기본 정보 -->
                        <GroupBox Header="📋 교수 기본 정보" Padding="15" BorderBrush="#9B59B6" BorderThickness="1" Margin="0,0,0,15">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="12" Foreground="#9B59B6"/>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                            <StackPanel>
                                <TextBlock Text="교수명 *" FontWeight="Bold" FontSize="11" Margin="0,0,0,5" Foreground="#2C3E50"/>
                                <TextBox x:Name="txtProfessorName" Height="30" FontSize="11"
                                         BorderBrush="#BDC3C7" BorderThickness="1" Padding="6"/>
                                <TextBlock Text="* 필수 입력 항목" FontSize="9" Foreground="#E74C3C" Margin="0,3,0,0"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- 2. 선호 강의 시간 -->
                        <GroupBox Header="✅ 선호 강의 시간" Padding="15" BorderBrush="#27AE60" BorderThickness="1" Margin="0,0,0,15">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="12" Foreground="#27AE60"/>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                            <StackPanel>
                                <TextBlock Text="강의를 선호하는 요일 선택" FontSize="10" Margin="0,0,0,10" Foreground="#34495E"/>

                                <WrapPanel Orientation="Horizontal">
                                    <CheckBox x:Name="chkPreferMon" Content="월" Margin="0,0,10,8" FontSize="10"/>
                                    <CheckBox x:Name="chkPreferTue" Content="화" Margin="0,0,10,8" FontSize="10"/>
                                    <CheckBox x:Name="chkPreferWed" Content="수" Margin="0,0,10,8" FontSize="10"/>
                                    <CheckBox x:Name="chkPreferThu" Content="목" Margin="0,0,10,8" FontSize="10"/>
                                    <CheckBox x:Name="chkPreferFri" Content="금" Margin="0,0,10,8" FontSize="10"/>
                                </WrapPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- 3. 불가능한 시간 -->
                        <GroupBox Header="⛔ 불가능한 시간" Padding="15" BorderBrush="#E74C3C" BorderThickness="1" Margin="0,0,0,15">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="12" Foreground="#E74C3C"/>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                            <StackPanel>
                                <!-- 불가능한 시간 타입 선택 -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <RadioButton x:Name="rbUnavailableByTime" Content="시간대별" 
                                                 IsChecked="True" Margin="0,0,15,0" FontSize="10"
                                                 Checked="rbUnavailableByTime_Checked"/>
                                    <RadioButton x:Name="rbUnavailableByPeriod" Content="교시별" 
                                                 Margin="0,0,15,0" FontSize="10"
                                                 Checked="rbUnavailableByPeriod_Checked"/>
                                </StackPanel>

                                <!-- 시간대별 불가능 시간 -->
                                <StackPanel x:Name="spTimeBasedUnavailable">
                                    <!-- 불가능 시간 1 -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <ComboBox x:Name="cbSlot1Day" Width="60" Height="25" FontSize="10" Margin="0,0,5,0">
                                            <ComboBoxItem Content="월요일"/>
                                            <ComboBoxItem Content="화요일"/>
                                            <ComboBoxItem Content="수요일"/>
                                            <ComboBoxItem Content="목요일"/>
                                            <ComboBoxItem Content="금요일"/>
                                        </ComboBox>
                                        <ComboBox x:Name="cbSlot1Time" Width="70" Height="25" FontSize="10">
                                            <ComboBoxItem Content="오전"/>
                                            <ComboBoxItem Content="오후"/>
                                            <ComboBoxItem Content="전체"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <!-- 불가능 시간 2 -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <ComboBox x:Name="cbSlot2Day" Width="60" Height="25" FontSize="10" Margin="0,0,5,0">
                                            <ComboBoxItem Content="월요일"/>
                                            <ComboBoxItem Content="화요일"/>
                                            <ComboBoxItem Content="수요일"/>
                                            <ComboBoxItem Content="목요일"/>
                                            <ComboBoxItem Content="금요일"/>
                                        </ComboBox>
                                        <ComboBox x:Name="cbSlot2Time" Width="70" Height="25" FontSize="10">
                                            <ComboBoxItem Content="오전"/>
                                            <ComboBoxItem Content="오후"/>
                                            <ComboBoxItem Content="전체"/>
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>

                                <!-- 교시별 불가능 시간 -->
                                <StackPanel x:Name="spPeriodBasedUnavailable" Visibility="Collapsed">
                                    <!-- 교시별 불가능 시간 1 -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <ComboBox x:Name="cbPeriodSlot1Day" Width="60" Height="25" FontSize="10" Margin="0,0,3,0">
                                            <ComboBoxItem Content="모든요일"/>
                                            <ComboBoxItem Content="월요일"/>
                                            <ComboBoxItem Content="화요일"/>
                                            <ComboBoxItem Content="수요일"/>
                                            <ComboBoxItem Content="목요일"/>
                                            <ComboBoxItem Content="금요일"/>
                                        </ComboBox>
                                        <ComboBox x:Name="cbPeriodSlot1Start" Width="35" Height="25" FontSize="10" Margin="0,0,3,0">
                                            <ComboBoxItem Content="1"/>
                                            <ComboBoxItem Content="2"/>
                                            <ComboBoxItem Content="3"/>
                                            <ComboBoxItem Content="4"/>
                                            <ComboBoxItem Content="5"/>
                                            <ComboBoxItem Content="6"/>
                                            <ComboBoxItem Content="7"/>
                                            <ComboBoxItem Content="8"/>
                                            <ComboBoxItem Content="9"/>
                                        </ComboBox>
                                        <TextBlock Text="~" VerticalAlignment="Center" FontSize="10" Margin="0,0,3,0"/>
                                        <ComboBox x:Name="cbPeriodSlot1End" Width="35" Height="25" FontSize="10">
                                            <ComboBoxItem Content="1"/>
                                            <ComboBoxItem Content="2"/>
                                            <ComboBoxItem Content="3"/>
                                            <ComboBoxItem Content="4"/>
                                            <ComboBoxItem Content="5"/>
                                            <ComboBoxItem Content="6"/>
                                            <ComboBoxItem Content="7"/>
                                            <ComboBoxItem Content="8"/>
                                            <ComboBoxItem Content="9"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <!-- 교시별 불가능 시간 2 -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <ComboBox x:Name="cbPeriodSlot2Day" Width="60" Height="25" FontSize="10" Margin="0,0,3,0">
                                            <ComboBoxItem Content="모든요일"/>
                                            <ComboBoxItem Content="월요일"/>
                                            <ComboBoxItem Content="화요일"/>
                                            <ComboBoxItem Content="수요일"/>
                                            <ComboBoxItem Content="목요일"/>
                                            <ComboBoxItem Content="금요일"/>
                                        </ComboBox>
                                        <ComboBox x:Name="cbPeriodSlot2Start" Width="35" Height="25" FontSize="10" Margin="0,0,3,0">
                                            <ComboBoxItem Content="1"/>
                                            <ComboBoxItem Content="2"/>
                                            <ComboBoxItem Content="3"/>
                                            <ComboBoxItem Content="4"/>
                                            <ComboBoxItem Content="5"/>
                                            <ComboBoxItem Content="6"/>
                                            <ComboBoxItem Content="7"/>
                                            <ComboBoxItem Content="8"/>
                                            <ComboBoxItem Content="9"/>
                                        </ComboBox>
                                        <TextBlock Text="~" VerticalAlignment="Center" FontSize="10" Margin="0,0,3,0"/>
                                        <ComboBox x:Name="cbPeriodSlot2End" Width="35" Height="25" FontSize="10">
                                            <ComboBoxItem Content="1"/>
                                            <ComboBoxItem Content="2"/>
                                            <ComboBoxItem Content="3"/>
                                            <ComboBoxItem Content="4"/>
                                            <ComboBoxItem Content="5"/>
                                            <ComboBoxItem Content="6"/>
                                            <ComboBoxItem Content="7"/>
                                            <ComboBoxItem Content="8"/>
                                            <ComboBoxItem Content="9"/>
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- 추가 버튼 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Border CornerRadius="8">
                                <Button x:Name="btnAddProfessor" Content="➕ 추가" Width="80" Height="35" Margin="5,0"
                                        Background="#27AE60" Foreground="White" FontWeight="Bold" FontSize="12"
                                        Click="btnAddProfessor_Click" BorderThickness="0"/>
                            </Border>
                            <Border CornerRadius="8">
                                <Button x:Name="btnClear" Content="🔄 초기화" Width="80" Height="35" Margin="5,0"
                                        Background="#95A5A6" Foreground="White" FontWeight="Bold" FontSize="12"
                                        Click="btnClear_Click" BorderThickness="0"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- 우측: 입력된 교수 목록 -->
            <Border Grid.Column="1" BorderBrush="#34495E" BorderThickness="2" CornerRadius="10" 
        Margin="7,0,0,0" Background="#FAFAFA">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 헤더 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <TextBlock Text="👥" FontSize="20" Margin="0,0,8,0"/>
                        <TextBlock Text="교수 목록 관리" FontWeight="Bold" FontSize="16" 
                       Foreground="#34495E" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 데이터 소스 선택 -->
                    <Border Grid.Row="1" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" 
                CornerRadius="5" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="📊 데이터 소스" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="rbShowTemp" Content="임시 입력 목록" IsChecked="True" 
                                Margin="0,0,15,0" FontSize="11" Checked="DataSource_Changed"/>
                                <RadioButton x:Name="rbShowDB" Content="데이터베이스" 
                                Margin="0,0,15,0" FontSize="11" Checked="DataSource_Changed"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- 통계 정보 -->
                    <Border Grid.Row="2" BorderBrush="#9B59B6" BorderThickness="1" 
                CornerRadius="5" Padding="10" Margin="0,0,0,10">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#F4E8FF" Offset="0"/>
                                <GradientStop Color="#E8D5FF" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="총 교수 수: " FontSize="12" FontWeight="Bold"/>
                                    <TextBlock x:Name="txtProfessorCount" Text="0명" FontSize="12" FontWeight="Bold" Foreground="#9B59B6"/>
                                    <TextBlock x:Name="txtDataSourceStatus" Text=" | 임시 목록" FontSize="11" Foreground="#E67E22" Margin="10,0,0,0"/>
                                </StackPanel>
                                <TextBlock x:Name="txtSelectionStatus" Text="선택된 교수가 없습니다" FontSize="10" 
                              Foreground="#7F8C8D" Margin="0,3,0,0"/>
                            </StackPanel>

                            <Button Grid.Column="1" x:Name="btnRefreshData" Content="🔄" Width="30" Height="25" 
                        Background="Transparent" BorderThickness="0" FontSize="14"
                        Click="btnRefreshData_Click" ToolTip="데이터 새로고침">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8D5FF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- 교수 리스트 -->
                    <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="listProfessors" SelectionChanged="listProfessors_SelectionChanged"
                     BorderThickness="0" Background="Transparent" SelectionMode="Extended">

                            <!-- 개선된 아이템 컨테이너 스타일 -->
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="BorderElement" 
                                            Background="White"
                                            BorderBrush="#BDC3C7"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Margin="0,2"
                                            Padding="2">
                                                    <ContentPresenter Margin="10"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="BorderElement" Property="BorderBrush" Value="#9B59B6"/>
                                                        <Setter TargetName="BorderElement" Property="BorderThickness" Value="2"/>
                                                        <Setter TargetName="BorderElement" Property="Background" Value="#F4E8FF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="BorderElement" Property="Background" Value="#F8F9FA"/>
                                                        <Setter TargetName="BorderElement" Property="BorderBrush" Value="#9B59B6"/>
                                                    </Trigger>
                                                    <MultiTrigger>
                                                        <MultiTrigger.Conditions>
                                                            <Condition Property="IsSelected" Value="True"/>
                                                            <Condition Property="IsMouseOver" Value="True"/>
                                                        </MultiTrigger.Conditions>
                                                        <Setter TargetName="BorderElement" Property="Background" Value="#E8D5FF"/>
                                                    </MultiTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <!-- 개선된 아이템 템플릿 -->
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="13" 
                                           Foreground="#2C3E50" TextWrapping="Wrap"/>

                                            <!-- 선호 시간 표시 -->
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="✅ " FontSize="10" Foreground="#27AE60"/>
                                                <TextBlock Text="{Binding PreferredTimeSlots}" FontSize="10" 
                                               Foreground="#27AE60" TextWrapping="Wrap"/>
                                            </StackPanel>

                                            <!-- 불가능한 시간 표시 -->
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <TextBlock Text="⛔ " FontSize="10" Foreground="#E74C3C"/>
                                                <TextBlock Text="{Binding UnavailableTimeSlots}" FontSize="10" 
                                               Foreground="#E74C3C" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- 상태 표시 아이콘 -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                                            <TextBlock Text="💾" FontSize="16" ToolTip="데이터베이스에 저장됨"
                                          Visibility="{Binding IsSaved, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            <TextBlock Text="⏳" FontSize="16" ToolTip="저장 대기 중"
                                          Visibility="{Binding IsTemp, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>

                    <!-- 편집 버튼들 (개선된 버전) -->
                    <Grid Grid.Row="4" Margin="0,15,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 개별 조작 버튼들 -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Border CornerRadius="8" Margin="3,0">
                                <Button x:Name="btnEditProfessor" Content="✏️ 수정" Width="70" Height="32" 
                            Click="btnEditProfessor_Click" IsEnabled="False"
                            Background="#3498DB" Foreground="White" FontSize="11" FontWeight="Bold"
                            BorderThickness="0" ToolTip="선택한 교수 정보를 수정합니다">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="8" 
                                                    Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#2980B9"/>
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter Property="Background" Value="#BDC3C7"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Border>

                            <Border CornerRadius="8" Margin="3,0">
                                <Button x:Name="btnDeleteProfessor" Content="🗑️ 삭제" Width="70" Height="32" 
                            Click="btnDeleteProfessor_Click" IsEnabled="False"
                            Background="#E74C3C" Foreground="White" FontSize="11" FontWeight="Bold"
                            BorderThickness="0" ToolTip="선택한 교수를 삭제합니다">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="8" 
                                                    Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#C0392B"/>
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter Property="Background" Value="#BDC3C7"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Border>

                            <Border CornerRadius="8" Margin="3,0">
                                <Button x:Name="btnDeleteSelected" Content="🗑️ 선택 삭제" Width="80" Height="32" 
                            Click="btnDeleteSelected_Click" IsEnabled="False"
                            Background="#D35400" Foreground="White" FontSize="10" FontWeight="Bold"
                            BorderThickness="0" ToolTip="선택한 여러 교수를 한번에 삭제합니다">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="8" 
                                                    Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#A04000"/>
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter Property="Background" Value="#BDC3C7"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Border>
                        </StackPanel>

                        <!-- 데이터 관리 버튼들 -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Border CornerRadius="6" Margin="2,0">
                                <Button x:Name="btnLoadFromDB" Content="📥 DB에서 불러오기" Width="100" Height="28" 
                            Click="btnLoadFromDB_Click"
                            Background="#8E44AD" Foreground="White" FontSize="10" FontWeight="Bold"
                            BorderThickness="0" ToolTip="데이터베이스에서 교수 목록을 불러옵니다">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6" 
                                                    Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#7D3C98"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Border>

                            <Border CornerRadius="6" Margin="2,0">
                                <Button x:Name="btnClearList" Content="🗑️ 목록 비우기" Width="80" Height="28" 
                            Click="btnClearList_Click"
                            Background="#95A5A6" Foreground="White" FontSize="10" FontWeight="Bold"
                            BorderThickness="0" ToolTip="임시 목록을 모두 비웁니다">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6" 
                                                    Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#7F8C8D"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- 하단: 일괄 저장 버튼 -->
        <Border Grid.Row="2" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" 
                CornerRadius="8" Padding="15" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <!-- 교수 정보 입력 페이지로 이동 버튼 -->
                <Border CornerRadius="8" Margin="5,0">
                    <Button x:Name="btnGoToSubject" Content="📚 교과목 정보 입력" Width="140" Height="45" Margin="5,0"
            Background="#E67E22" Foreground="White" FontWeight="Bold" FontSize="12"
            Click="btnGoToSubject_Click" BorderThickness="0"
            ToolTip="교과목 정보를 입력하는 페이지로 이동합니다">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8" 
                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E67E22"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>

                <!-- 강의실 정보 입력 페이지로 이동 버튼 -->
                <Border CornerRadius="8" Margin="5,0">
                    <Button x:Name="btnGoToClassroom" Content="🏢 강의실 정보 입력" Width="140" Height="45" Margin="5,0"
            Background="#3498DB" Foreground="White" FontWeight="Bold" FontSize="12"
            Click="btnGoToClassroom_Click" BorderThickness="0"
            ToolTip="강의실 정보를 입력하는 페이지로 이동합니다">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8" 
                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2980B9"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>

                <Button x:Name="btnSaveAll" Content="💾 전체 저장" Width="140" Height="45" Margin="10,0"
                        Background="#2ECC71" Foreground="White" FontWeight="Bold" FontSize="14"
                        Click="btnSaveAll_Click" BorderThickness="0"  IsEnabled="False">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#27AE60"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#BDC3C7"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                
                <Button x:Name="btnCancel" Content="❌ 취소" Width="140" Height="45" Margin="10,0"
                        Background="#E74C3C" Foreground="White" FontWeight="Bold" FontSize="14"
                        Click="btnCancel_Click" BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#C0392B"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>